    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3175*"/>
            <ColumnDefinition Width="0.35*"/>
            <ColumnDefinition Width="0.3175*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="countDownTB" FontSize="18" FontFamily="Comic Sans MS" Height="30" VerticalAlignment="Top"/>
        <TextBlock Text="Авторизация" FontFamily="Comic Sans MS" FontSize="28" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Width="295" Height="50" Grid.Row="1" Grid.ColumnSpan="3" Text="Логин" FontFamily="Comic Sans MS" FontSize="24" Foreground="Gray" Name="txtHintLogin"/>
        <TextBox Background="Transparent" TextChanged="loginTB_TextChanged" Style="{DynamicResource RoundedEdgesStyle}" FontSize="24" x:Name="loginTB"  Width="300" Height="50" Grid.Row="1" Grid.ColumnSpan="3"></TextBox>

        <TextBox Style="{DynamicResource TextBoxStyleRoundedEdges}" x:Name="passwordTB" Width="300" Height="50" FontSize="24" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <TextBox.Text>
                <Binding ElementName="passwordPB" Path="Password"/>
            </TextBox.Text>
        </TextBox>
        <TextBlock Width="295" Height="50" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Top" Text="Пароль" FontFamily="Comic Sans MS" Foreground="Gray" Name="txtHintPassword" FontSize="24" />
        <PasswordBox Background="Transparent" PasswordChanged="passwordPB_PasswordChanged" Style="{DynamicResource PasswordBoxStyleRoundedEdges}" x:Name="passwordPB" Width="300" Height="50" FontSize="24" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <Button x:Name="passwordOpenButton" Content="Видим" FontSize="18" FontFamily="Comic Sans MS" Grid.Column="2" Grid.Row="2" Width="90" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="#FF92D050" Click="passwordOpenButton_Click" Background="#FF92D050" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="passwordCloseButton" Content="Невидим" FontSize="18" FontFamily="Comic Sans MS" Grid.Column="2" Grid.Row="2" Width="90" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"  BorderBrush="#FF92D050" Click="passwordCloseButton_Click" Background="#FF92D050">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="logBttn"  Width="250" Height="50" Grid.Row="3" Grid.ColumnSpan="3" Click="logBttn_Click" Content="ВОЙТИ" FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="24" Foreground="Black" Background="#FF349C3D" BorderBrush="#FFE5E5E5">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>

